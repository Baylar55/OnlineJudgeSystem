@using AlgoCode.Application.Features.Contests.Queries.GetById
@model GetContestByIdQueryResponse

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Problem Table</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <tbody>
                    <tr>
                        <th>Title</th>
                        <td>@Model.Title</td>
                    </tr>
                    <tr>
                        <th>Description</th>
                        <td>@Html.Raw(Model.Description)</td>
                    </tr>
                     <tr>
                        <th style="vertical-align:middle;">Photo</th>
                        <td><img src="~/assets/images/@Model.Photo" alt="Alternate Text" width="100" /></td>
                    </tr>
                    <tr>
                        <th>IsActive</th>
                        <td>@Model.IsActive</td>
                    </tr>
                    <tr>
                        <th style="vertical-align:middle;">Start Time</th>
                        <td>@Model.StartTime.ToString("dddd, dd MMMM yyyy")</td>
                    </tr>

                    <tr>
                        <th style="vertical-align:middle;">End Time</th>
                        <td>@Model.EndTime.ToString("dddd, dd MMMM yyyy")</td>
                    </tr>                   
                    <tr>
                        <th>Created At</th>
                        <td>@Model.Created.ToString("dddd, dd MMMM yyyy")</td>
                    </tr>
                    <tr>
                        <th>Created By</th>
                        <td>@Model.CreatedBy</td
                    </tr>
                    <tr>
                        <th>Modified At</th>
                        <td>@Model.LastModified.ToString()</td>
                    </tr>
                    <tr>
                        <th>Modified By</th>
                        <td>@Model.LastModifiedBy</td>
                    </tr>
                    <tr>
                        <th>Tags</th>
                        <td>
                            @foreach (var problem in Model.Problems)
                            {
                                @problem.Title
                                @if (problem != Model.Problems[Model.Problems.Count-1])
                                {
                                    @:, 
                                }
                            }
                        </td>
                    </tr>
                </tbody>
                <a asp-action="index" asp-controller="problems" asp-area="admin" class="btn btn-info mb-2">Go to Back</a>
            </table>
        </div>
    </div>
</div>